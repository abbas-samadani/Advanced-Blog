 <!-- Page Headings Start -->
        <div class="row justify-content-between align-items-center mb-10">
          <!-- Page Heading Start -->
          <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
              <h3 class="title">کاربر <span>/ ویرایش کاربر</span></h3>
            </div>
          </div>
          <!-- Page Heading End -->

          <!-- Page Button Group End -->
        </div>
        <!-- Page Headings End -->

        <div class="row mbn-30">
          <!-- Revenue Statistics Chart Start -->
          <div class="col-md-12 mb-30">
            <div class="box">
              <div class="box-head">
                <div class="row">
                  <h4 class="title">اطلاعات کاربر</h4>
                </div>
              </div>
              
              <div class="box-body">
                {{#if hasError}}
                  {{#each errors}}
                    <div class="alert alert-danger" role="alert">                    
                        <strong>{{ this }}</strong>
                        <button class="close" data-dismiss="alert"><i class="zmdi zmdi-close"></i></button>                    
                    </div>
                  {{/each}}
                {{/if}}
                <form method="POST" action="/admin/users/update/{{ user.id }}">
                  <div class="row mbn-20">
                    <div class="col-12 mb-20">
                      <input type="text" name="name" id="formLayoutUsername3" class="form-control" value="{{ user.full_name }}" placeholder="نام" />
                    </div>
                    <div class="col-12 mb-20">
                      <input type="email" name="email" id="formLayoutEmail3" class="form-control" value="{{ user.email }}" placeholder="ایمیل" />
                    </div>    
                    <div class="col-12 mb-20">
                      <input type="password" name="password" id="formLayoutEmail3" class="form-control" value="{{ user.password }}" placeholder="پسوورد" />
                    </div>                

                    

                    <div class="col-12 mb-20">
                      <h6 class="mb-15">نقش کاربری</h6>
                      <div class="form-group">
                        <label class="inline"><input name="role" type="radio" value="0" {{#isSelectedRole 0 }} checked {{/isSelectedRole }}/>کاربر</label>
                        <label class="inline"><input name="role" type="radio" value="1" {{#isSelectedRole 1 }} checked {{/isSelectedRole }} />نویسنده</label>
                        <label class="inline"><input name="role" type="radio" value="2" {{#isSelectedRole 2 }} checked {{/isSelectedRole }} />مدیر</label>                        
                      </div>
                    </div>

                    <div class="col-12 mb-20">
                      <input type="submit" value="ذخیره سازی" class="button button-primary" />
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- Revenue Statistics Chart End -->
        </div>